<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonBes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="btnSayiTik"
        android:rotationX="0"
        android:rotationY="0"
        android:text="5"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationX="-45dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonAlti"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonDort"

        app:layout_constraintTop_toBottomOf="@+id/buttonIki"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonYedi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:onClick="btnSayiTik"
        android:rotationX="0"
        android:rotationY="0"
        android:text="7"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationX="-45dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonSekiz"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDort" />

    <Button
        android:id="@+id/buttonAlti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="btnSayiTik"
        android:rotationX="0"
        android:rotationY="0"
        android:text="6"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationX="-45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonBes"
        app:layout_constraintTop_toBottomOf="@+id/buttonUc" />

    <Button
        android:id="@+id/buttonDort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:onClick="btnSayiTik"
        android:rotationX="0"
        android:rotationY="0"
        android:text="4"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationX="-45dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonBes"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBir" />

    <Button
        android:id="@+id/buttonSifir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:onClick="btnSayiTik"
        android:rotationX="0"
        android:rotationY="0"
        android:text="0"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationX="-45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSekiz" />

    <Button
        android:id="@+id/buttonSekiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:onClick="btnSayiTik"
        android:rotationX="0"
        android:rotationY="0"
        android:text="8"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationX="-45dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonDokuz"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonYedi"
        app:layout_constraintTop_toBottomOf="@+id/buttonBes" />

    <Button
        android:id="@+id/buttonDokuz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:onClick="btnSayiTik"
        android:rotationX="0"
        android:rotationY="0"
        android:text="9"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationX="-45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonSekiz"
        app:layout_constraintTop_toBottomOf="@+id/buttonAlti" />

    <Button
        android:id="@+id/buttonIki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:onClick="btnSayiTik"
        android:rotationX="0"
        android:rotationY="0"
        android:text="2"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationX="-45dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonUc"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonBir"
        app:layout_constraintTop_toBottomOf="@+id/textSonuc" />

    <Button
        android:id="@+id/buttonUc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:onClick="btnSayiTik"
        android:rotationX="0"
        android:rotationY="0"
        android:text="3"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationX="-45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonIki"
        app:layout_constraintTop_toBottomOf="@+id/textSonuc" />

    <Button
        android:id="@+id/buttonBir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:onClick="btnSayiTik"
        android:rotationX="0"
        android:rotationY="0"
        android:text="1"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationX="-45dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonIki"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSonuc" />

    <Button
        android:id="@+id/buttonTemizle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="104dp"
        android:rotationX="0"
        android:rotationY="0"
        android:text="C"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationX="-45dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonArti"
        app:layout_constraintStart_toEndOf="@+id/buttonUc"
        app:layout_constraintStart_toStartOf="@+id/buttonArti"
        app:layout_constraintTop_toBottomOf="@+id/textSonuc"
        android:onClick="btnSayiTik" />

    <Button
        android:id="@+id/buttonSonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:onClick="btnSayiTik"
        android:text="="
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationX="-40dp"
        app:layout_constraintStart_toEndOf="@+id/buttonAlti"
        app:layout_constraintTop_toBottomOf="@+id/buttonArti" />

    <Button
        android:id="@+id/buttonArti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:onClick="btnSayiTik"
        android:text="+"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationX="-40dp"
        android:translationY="1dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonSonuc"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonAlti"
        app:layout_constraintStart_toStartOf="@+id/buttonSonuc"
        app:layout_constraintTop_toBottomOf="@+id/buttonTemizle" />

    <EditText
        android:id="@+id/textSonuc"
        android:layout_width="0dp"
        android:layout_height="167dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="37dp"
        android:ems="10"
        android:gravity="right"
        android:hint="0"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>